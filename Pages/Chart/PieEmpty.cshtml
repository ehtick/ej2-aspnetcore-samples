@page
@model EJ2CoreSampleBrowser.Pages.Chart.PieEmptyModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var Drop = "Drop";
        var data = new string[] { "Drop", "Average", "Zero" };
    }
    <div class="col-lg-8 control-section">
        <ejs-accumulationchart id="container" title="Movie Genre Revenue Share" load="load" enableSmartLabels="false" enableAnimation=false enableBorderOnMouseMove="false" textRender="textRender">
            <e-accumulationchart-tooltipsettings enable="true" enableHighlight="true" header="" format="<b>${point.x}</b><br> Profit: <b>$${point.y}K</b>"></e-accumulationchart-tooltipsettings>
            <e-accumulationchart-legendsettings visible="false">
            </e-accumulationchart-legendsettings>
            <e-accumulation-series-collection>
                <e-accumulation-series dataSource="@Model.ChartPoints" xName="Product" yName="ProfitPercentage" name="Profit" radius="80%" borderRadius=3>
                    <e-accumulationseries-datalabel position="@Syncfusion.EJ2.Charts.AccumulationLabelPosition.Inside" enableRotation="true" visible="true">
                        <e-font fontWeight="600"></e-font>
                    </e-accumulationseries-datalabel>
                    <e-accumulationseries-border width=1 color="#ffffff"></e-accumulationseries-border>
                    <e-accumulationseries-emptypointsettings fill="#e6e6e6"></e-accumulationseries-emptypointsettings>
                </e-accumulation-series>
            </e-accumulation-series-collection>
        </ejs-accumulationchart>
    </div>
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties" style="width: 100%">
            <tbody>
                <tr style="height: 50px">
                    <td style="width: 50%">
                        <div>
                            Empty Point Mode:
                        </div>
                    </td>
                    <td style="width: 50%;">
                        <ejs-dropdownlist id="emptypointmode" dataSource="@data" value="Drop" change="onChange" index="0" popupHeight="220px"></ejs-dropdownlist>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            var indexedTheme = loadAccumulationChartTheme(args);
            if ((indexedTheme.replace(/5.3/i, '5')) === 'bootstrap5-dark') {
                args.chart.series[0].emptyPointSettings.fill = '#FF7F7F';
            }
            args.accumulation.series[0].dataLabel.font.size = ej.base.Browser.isDevice ? '8px' : '12px';
        }

        function onChange(args) {
            var pie = document.getElementById("container").ej2_instances[0];
            pie.series[0].emptyPointSettings.mode = this.value;
            pie.series[0].animation.enable = false;
            pie.refresh();
        }

        function textRender(args){
            args.text = args.point.x + ": $" + args.point.y + "K";
        }
    </script>
}

@*custom code start*@
<style>

    #control-container {
        padding: 0px !important;
    }
</style>
@*custom code end*@
