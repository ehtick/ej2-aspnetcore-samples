@page
@model EJ2CoreSampleBrowser.Pages.Chart.PieModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var piecenter = new
        {
            x = "50%",
            y = "50%"
        };

    }
    <div class="control-section" align='center'>
        <ejs-accumulationchart id="container" title="Global Electricity Generation by Source - 2024" subTitle="Source: wikipedia.org" load="load" enableAnimation="true" enableBorderOnMouseMove="false">
            <e-accumulationchart-center x="50%" y="50%"></e-accumulationchart-center>
            <e-accumulationchart-tooltipsettings enable="true" format="<b>${point.x}</b><br>Percentage: <b>${point.y}%</b>" header="" enableHighlight="true"></e-accumulationchart-tooltipsettings>
            <e-accumulationchart-legendsettings visible="false">
            </e-accumulationchart-legendsettings>
            <e-accumulation-series-collection>
                <e-accumulation-series dataSource="@Model.ChartPoints" xName="Browser" yName="Users" name="Browser" borderRadius="3" innerRadius="0%" explode="true" explodeOffset="10%">
                    <e-accumulationseries-datalabel name="DataLabelMappingName" visible="true" position="@Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside">
                        <e-font fontWeight="600"></e-font>
                        <e-connectorstyle type="@Syncfusion.EJ2.Charts.ConnectorType.Curve"></e-connectorstyle>
                    </e-accumulationseries-datalabel>
                    <e-accumulationseries-border width=1 color="#ffffff"></e-accumulationseries-border>
                </e-accumulation-series>
            </e-accumulation-series-collection>
        </ejs-accumulationchart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadAccumulationChartTheme(args);
            args.accumulation.series[0].startAngle = ej.base.Browser.isDevice ? 70 : 30;
            args.accumulation.series[0].radius = ej.base.Browser.isDevice ? "40%" : "60%";
            args.accumulation.series[0].dataLabel.connectorStyle.length = ej.base.Browser.isDevice ? '10px' : '20px';
            args.accumulation.series[0].dataLabel.font.size = ej.base.Browser.isDevice ? '8px' : '12px';
            args.accumulation.series[0].explodeIndex = 0;
        }
    </script>
}

