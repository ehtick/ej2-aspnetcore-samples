    <meta name="description" content="This example demonstrates the Bubble in ASP.NET Core Chart control. Explore here for more details." />
}
@*custom code end*@
@section ActionDescription{
    <div id="action-description">
        <p>
            This <a target="_blank" href="https://www.syncfusion.com/aspnet-core-ui-controls/charts/chart-types/bubble-chart" aria-label="Navigate to explore the syncfusion ASP.NET Core Bubble Chart">ASP.NET Core Bubble Chart</a> example visualizes the literacy rates and GDP growth rates of countries. A tooltip shows more information about the countries.
        </p>
    </div>
}

