@page
@model EJ2CoreSampleBrowser.Pages.Chart.BubbleModel
@using Syncfusion.EJ2

@section ControlsSection{
    <div class="control-section">
        <div id="container" align="center">
            <ejs-chart id="BubbleContainer" title="World Countries Details"
                       load="load" pointRender="pointRender">
                <e-chart-tooltipsettings enable="true" enableMarker="false" header="<b>${point.tooltip}</b>" format="Literacy Rate : <b>${point.x}%</b> <br/>GDP Annual Growth Rate : <b>${point.y}</b><br/>Population : <b>${point.size} Billion</b>">
                </e-chart-tooltipsettings>
                <e-chart-legendsettings visible="false">
                </e-chart-legendsettings>
                <e-chart-primaryxaxis minimum=65 maximum=102 interval=5 crossesAt="5"></e-chart-primaryxaxis>
                <e-chart-primaryyaxis minimum=0 maximum=10 interval=2.5 crossesAt="85"></e-chart-primaryyaxis>
                <e-series-collection>
                    <e-series dataSource="@Model.ChartPoints" minRadius=3 maxRadius=8 xName="Literacy" yName="GDPGrowth"
                              size="BubbleSize" name="Pound" tooltipMappingName="Text" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Bubble">
                        <e-series-border width="2"></e-series-border>
                        <e-series-marker>
                            <e-series-datalabel name="TooltipMappingName" visible="true" position="@Syncfusion.EJ2.Charts.LabelPosition.Middle">
                                <e-font fontWeight="500" color="#ffffff"></e-font>
                            </e-series-datalabel>
                        </e-series-marker>
                    </e-series>
                </e-series-collection>
            </ejs-chart>
        </div>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script type="text/javascript">
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.series[0].dataSource[2].TooltipMappingName = ej.base.Browser.isDevice ? "ID" : "Indonesia";
            args.chart.series[0].dataSource[4].TooltipMappingName = ej.base.Browser.isDevice ? "BR" : "Brazil";
            args.chart.series[0].dataSource[5].TooltipMappingName = ej.base.Browser.isDevice ? "DE" : "Germany";
            args.chart.series[0].dataSource[6].TooltipMappingName = ej.base.Browser.isDevice ? "EG" : "Egypt";
            args.chart.series[0].dataSource[8].TooltipMappingName = ej.base.Browser.isDevice ? "JP" : "Japan";
            args.chart.series[0].dataSource[12].TooltipMappingName = ej.base.Browser.isDevice ? "HK" : "Hong Kong";
            args.chart.series[0].dataSource[15].TooltipMappingName = ej.base.Browser.isDevice ? "AUS" : "Australia";
            args.chart.series[0].dataSource[17].TooltipMappingName = ej.base.Browser.isDevice ? "TW" : "Taiwan";
        }
        function pointRender(args) {
            bubblePointRender(args);
        }
    </script>
}
