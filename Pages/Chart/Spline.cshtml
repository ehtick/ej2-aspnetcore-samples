@page
@model EJ2CoreSampleBrowser.Pages.Chart.SplineModel
@using Syncfusion.EJ2
@section ControlsSection{
@{
    string sun = "Jul";
    string cloud = "Jan";
}
<div class="control-section" align="center">

    <ejs-chart id="splineContainer" load="load" title="2024 US Temperature Trends with Hottest Coldest and Average Records" subTitle="Source: ncei.noaa.gov">
        <e-chart-chartarea>
            <e-chartarea-border width="0"></e-chartarea-border>
            <e-chartarea-margin bottom=12></e-chartarea-margin>
        </e-chart-chartarea>
        <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1" labelIntersectAction="@Syncfusion.EJ2.Charts.LabelIntersectAction.Rotate90">
            <e-majorgridlines width="0"></e-majorgridlines>
            <e-majorticklines width="0"></e-majorticklines>
        </e-chart-primaryxaxis>
            <e-chart-primaryyaxis labelFormat="{value}°F" title="Temperature (°F)" interval="20" minimum="0">
            <e-linestyle width="0"></e-linestyle>
            <e-majorticklines width="0"></e-majorticklines>
            <e-minorticklines width="0"></e-minorticklines>
        </e-chart-primaryyaxis>
        <e-series-collection>
            <e-series dataSource="@Model.SplineData" name="Max Temp" xName="Days" width="2" yName="MaxTemp" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                <e-series-marker visible="true" height="7" width="7" isFilled="true"></e-series-marker>
            </e-series>
            <e-series dataSource="@Model.SplineData" name="Avg Temp" xName="Days" width="2" yName="AvgTemp" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                <e-series-marker visible="true" height="7" width="7" isFilled="true"></e-series-marker>
            </e-series>
            <e-series dataSource="@Model.SplineData" name="Min Temp" xName="Days" width="2" yName="MinTemp" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                <e-series-marker visible="true" height="7" width="7" isFilled="true"></e-series-marker>
            </e-series>
        </e-series-collection>
        <e-chart-annotations>
                <e-chart-annotation X="cloud" Y="22.75" Content="<div id='chart_cloud'><img src='./../scripts/chart/images/cloud.png'  style='width: 41px; height: 41px' alt='Cloud Picture'/></div>" CoordinateUnits='@Syncfusion.EJ2.Charts.Units.Point' VerticalAlignment='@Syncfusion.EJ2.Charts.Position.Middle'></e-chart-annotation>
                <e-chart-annotation X="sun" Y="88.43" Content="<div id='chart_cloud'><img src='./../scripts/chart/images/sunny.png'  style='width: 41px; height: 41px' alt='Sunny Picture'/></div>" CoordinateUnits='@Syncfusion.EJ2.Charts.Units.Point' VerticalAlignment='@Syncfusion.EJ2.Charts.Position.Middle'></e-chart-annotation>
        </e-chart-annotations>
        <e-chart-tooltipsettings enable="true" shared=true showNearestTooltip=true header="<b>${point.x}</b>" format="${series.name} : <b>${point.y}</b>"></e-chart-tooltipsettings>
        <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
            <e-chart-crosshairsettings enable=true lineType="@Syncfusion.EJ2.Charts.LineType.Vertical" highlightCategory="true"></e-chart-crosshairsettings>
    </ejs-chart>
</div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.height = "500px";
        }
    </script>
}
