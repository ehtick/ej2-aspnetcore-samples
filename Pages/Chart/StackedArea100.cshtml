@page
@model EJ2CoreSampleBrowser.Pages.Chart.StackedArea100Model
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-chart id="lineContainer" load="load" title="Amount of Sales by Payment Mode">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-primaryxaxis labelFormat="yyyy" minimum="new DateTime(1999, 1, 1)" maximum="new DateTime(2015, 01, 1)" intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years" edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift" valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis interval="20">
                <e-linestyle width="0"></e-linestyle>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryyaxis>
            <e-chart-tooltipsettings enable="true" showNearestTooltip="true" enableHighlight="true">
            </e-chart-tooltipsettings>
            <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" name="Bank Transfer" xName="Period" opacity=1 width=2 yName="OrganicSales" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingArea100">
                    <e-series-border width="0.5" color="#ffffff"></e-series-border>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Credit Card" xName="Period" opacity=1 width=2 yName="FairTradeSales" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingArea100">
                    <e-series-border width="0.5" color="#ffffff"></e-series-border>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Debit Card" xName="Period" opacity=1 width=2 yName="VegAlternativesSales" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingArea100">
                    <e-series-border width="0.5" color="#ffffff"></e-series-border>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Cash" xName="Period" opacity=1 width=2 yName="OtherSales" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingArea100">
                    <e-series-border width="0.5" color="#ffffff"></e-series-border>
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
