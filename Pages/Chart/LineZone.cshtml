                <e-majorticklines width="0"></e-majorticklines>
                <e-minorticklines width="0"></e-minorticklines>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-annotations>
                <e-chart-annotation content="<div style='color:#228B22;font-weight:bold;font-size:14px'>Medium</div>" region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX" y="45%"></e-chart-annotation>
                <e-chart-annotation content="<div style='color:#0047AB;font-weight:bold;font-size:14px'>High</div>" region="@Syncfusion.EJ2.Charts.Regions.Series" x="valueX1" y="10%"></e-chart-annotation>
