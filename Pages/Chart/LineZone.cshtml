            </e-chart-annotations>
            <e-series-collection>
                <e-series segmentAxis="@Syncfusion.EJ2.Charts.Segment.Y" xName="X" width="2" yName="Y" type="@Syncfusion.EJ2.Charts.ChartSeriesType.MultiColoredLine" segments="@Model.Segments">
                    <e-series-marker visible=true isFilled=true border="markerBorder">
                    </e-series-marker>
                </e-series>
            </e-series-collection>
