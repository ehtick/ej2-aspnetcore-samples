@page
@using Syncfusion.EJ2
@model EJ2CoreSampleBrowser.Pages.Chart.CrosshairModel

@section ControlsSection {        
        <div class="control-section" align="center">
            <ejs-chart id="crosshairChart" title="Intraday Stock Price Movement" load="load">                
                <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                    <e-crosshairtooltip enable="true"></e-crosshairtooltip>
                    <e-majorgridlines width="0"></e-majorgridlines>
                    <e-majorticklines width="0"></e-majorticklines>
                    <e-lineStyle width="0"></e-lineStyle>
                </e-chart-primaryxaxis>
                <e-chart-primaryyaxis title="Stock Value" maximum="318" minimum="288">
                    <e-crosshairtooltip enable="true"></e-crosshairtooltip>
                    <e-majorticklines width="0"></e-majorticklines>
                    <e-linestyle width="0"></e-linestyle>
                </e-chart-primaryyaxis>
                <e-chart-chartarea>
                    <e-chartarea-border width="0"></e-chartarea-border>
                </e-chart-chartarea>
            <e-chart-tooltipsettings enable="true" header="" showNearestTooltip="true" format="<b>${point.x}</b> <br>Stock Price : <b>${point.y}</b>" enableMarker="false">
                </e-chart-tooltipsettings>
                <e-chart-crosshairsettings enable=true dashArray="5,5" snapToData="true"></e-chart-crosshairsettings>
                <e-series-collection>
                    <e-series dataSource="@Model.ChartPoints" type="@Syncfusion.EJ2.Charts.ChartSeriesType.SplineArea" xName="Time" yName="Value">
                        <e-series-border width="2"></e-series-border>
                        <e-series-animation enable="false"></e-series-animation>
                    </e-series>
                </e-series-collection>
            </ejs-chart>
        </div>
    <script src="~/scripts/chart/theme-color.js"></script>
        <script type="text/javascript">
        
            function load(args) {
                var selectedTheme = loadChartTheme(args);
                args.chart.tooltip.location.x = 70;
                args.chart.tooltip.location.y = 52;
                args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
                args.chart.series[0].fill = 'url(#' + (selectedTheme.replace(/5.3/i, '5')).toLowerCase() + '-gradient-chart)';
                if (args.chart.theme === 'Material3') {
                    args.chart.series[0].border.color = '#6355C7';
                }
                else if (args.chart.theme === 'Material3Dark') {
                    args.chart.series[0].border.color = '#4EAAFF';
                }
                else if (args.chart.theme === 'Fluent' || args.chart.theme === 'FluentDark') {
                    args.chart.series[0].border.color = '#1AC9E6';
                }
                else if (args.chart.theme === 'Fluent2') {
                    args.chart.series[0].border.color = '#6200EE';
                }
                else if (args.chart.theme === 'Fluent2Dark') {
                    args.chart.series[0].border.color = '#9BB449';
                }
                else if (args.chart.theme === 'Bootstrap5' || args.chart.theme === 'Bootstrap5Dark') {
                    args.chart.series[0].border.color = '#FD7E14';
                }
                else if (args.chart.theme === 'Tailwind') {
                    args.chart.series[0].border.color = '#5A61F6';
                }
                else if (args.chart.theme === 'TailwindDark') {
                    args.chart.series[0].border.color = '#8B5CF6';
                }
                else if (args.chart.theme === 'Tailwind3') {
                    args.chart.series[0].border.color = '#2F4074';
                }
                else if (args.chart.theme === 'Tailwind3Dark') {
                    args.chart.series[0].border.color = '#8029F1';
                }
                else if (args.chart.theme === 'HighContrast') {
                    args.chart.series[0].border.color = '#79ECE4';
                }
                else if (args.chart.theme === 'Fluent2HighContrast') {
                    args.chart.series[0].border.color = '#9BB449';
                }
            }
        </script>
}
