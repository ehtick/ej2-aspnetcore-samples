@page
@model EJ2CoreSampleBrowser.Pages.Chart.StripLineModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var Vertical = "Vertical";
    }
    <div class="control-section" align="center">
        <ejs-chart id="container" title="Wind Speed and Gust (km/h)" subTitle="WorldWeatherOnline.com" load="load">
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTimeCategory" labelFormat="E dd/MM" labelRotation="-90">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis minimum="0" maximum="30" interval="10" rangePadding="@Syncfusion.EJ2.Charts.ChartRangePadding.None" stripLines="@Model.yaxisstriplines" title="Wind Speed and Gust (km/h)">
                <e-majorticklines width="0"></e-majorticklines>
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-legendsettings visible="true" enableHighlight="true" shapeHeight="12" shapeWidth="15"></e-chart-legendsettings>
            <e-chart-tooltipsettings enable="true" header="" format="<b>${point.x}</b> <br> ${series.name} : <b>${point.y}</b>" enableMarker="false" enableHighlight="true" showNearestTooltip="true"></e-chart-tooltipsettings>
            <e-chart-titlestyle position="@Syncfusion.EJ2.Charts.TitlePosition.Bottom" textAlignment="@Syncfusion.EJ2.Charts.Alignment.Far"></e-chart-titlestyle>
            <e-series-collection>
                <e-series xName="X" yName="Wind" name="Wind Speed (km/h)" width="4" dataSource="@Model.WeatherReportsA" legendShape="@Syncfusion.EJ2.Charts.LegendShape.HorizontalLine" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                </e-series>
                <e-series xName="X" yName="Gust" name="Wind Gust (km/h)" width="4" dataSource="@Model.WeatherReportsB" legendShape="@Syncfusion.EJ2.Charts.LegendShape.HorizontalLine" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice ? 'Rotate90' : 'None';
        }
    </script>
    @*custom code start*@
    <style>
        #control-container {
            padding: 0px !important;
        }
    </style>
    @*custom code end*@
}
