@page
@model EJ2CoreSampleBrowser.Pages.Chart.TrendlinesModel
@using Syncfusion.EJ2
@section ControlsSection{
    @{

        var Linear = "Linear";
        var value = 1;
    }
    <div class="col-lg-12 control-section" align="center">
        <ejs-chart id="container" load="load" title="USD to INR Rates">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-primaryxaxis edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift" labelFormat="yyyy" valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="1"></e-linestyle>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis interval="10" minimum="0" maximum="80" labelFormat="â‚¹{value}" title="Rupees against Dollars">
                <e-majorticklines width="0"></e-majorticklines>
                <e-minorticklines width="0"></e-minorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" name="Rupees" xName="Period" yName="Rupees" type="@Syncfusion.EJ2.Charts.ChartSeriesType.Spline">
                    <e-series-marker visible="true" isFilled="true" width="7" height="7"></e-series-marker>
                    <e-series-trendlines>
                        <e-trendline type="@Syncfusion.EJ2.Charts.TrendlineTypes.Linear" width="3" name="Trends" fill="#C64A75" enableTooltip="false">
                        </e-trendline>
                    </e-series-trendlines>
                </e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" showNearestTooltip="true" enableHighlight="true"></e-chart-tooltipsettings>
            <e-chart-legendsettings visible="true" shapeHeight="15" shapeWidth="15"></e-chart-legendsettings>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
