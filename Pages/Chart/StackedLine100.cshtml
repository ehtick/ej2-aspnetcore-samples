@page
@model EJ2CoreSampleBrowser.Pages.Chart.StackedLine100Model
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">
        <ejs-chart id="container" load="load" title="Blood Type Distribution by Country" subTitle="Source: wikipedia.org">
            <e-chart-tooltipsettings enable="true" showNearestTooltip="true" enableHighlight="true" format="${point.x} : <b>${point.y}% (${point.percentage}%)</b>">
            </e-chart-tooltipsettings>
            <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                <e-linestyle width="0"></e-linestyle>
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-minorgridlines width="0"></e-minorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-minorticklines width="0"></e-minorticklines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis interval="20" title="Population Share (%)">
                <e-linestyle width="0"></e-linestyle>
                <e-majorgridlines width="1"></e-majorgridlines>
                <e-minorgridlines width="1"></e-minorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-minorticklines width="0"></e-minorticklines>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
                <e-chartarea-margin bottom=12></e-chartarea-margin>
            </e-chart-chartarea>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" name="Canada" xName="X" width="2" opacity="1" yName="Y" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingLine100">
                    <e-series-marker visible="true" width="7" height="7" shape="@Syncfusion.EJ2.Charts.ChartShape.Circle" isFilled="true"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Algeria" xName="X" width="2" opacity="1" yName="Y1" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingLine100">
                    <e-series-marker visible="true" width="7" height="7" shape="@Syncfusion.EJ2.Charts.ChartShape.Diamond" isFilled="true"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Ireland" xName="X" width="2" opacity="1" yName="Y2" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingLine100">
                    <e-series-marker visible="true" width="5" height="5" shape="@Syncfusion.EJ2.Charts.ChartShape.Rectangle" isFilled="true"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="Armenia" xName="X" width="2" opacity="1" yName="Y3" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StackingLine100">
                    <e-series-marker visible="true" width="6" height="6" shape="@Syncfusion.EJ2.Charts.ChartShape.Triangle" isFilled="true"></e-series-marker>
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
            args.chart.primaryXAxis.labelIntersectAction = ej.base.Browser.isDevice?'None':'Trim';
            args.chart.primaryXAxis.labelRotation = ej.base.Browser.isDevice?'-45':'0';
        }

    </script>
}
