@page
@model EJ2CoreSampleBrowser.Pages.Chart.SplineAreaModel
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-chart id="lineContainer"  load="load" title="Inflation Rate in Percentage">
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.DateTime" labelFormat="yyyy" intervalType="@Syncfusion.EJ2.Charts.IntervalType.Years" edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis minimum="0" maximum="4" interval="1" labelFormat="{value}%">
                <e-linestyle width="0"></e-linestyle>
                <e-majorticklines width="0"></e-majorticklines>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-legendsettings enableHighlight="true"></e-chart-legendsettings>
            <e-chart-tooltipsettings enable="true" showNearestTooltip="true" enableHighlight="true"></e-chart-tooltipsettings>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" name="US" xName="Period" opacity=0.5 width=2  yName="US_InflationRate" type="@Syncfusion.EJ2.Charts.ChartSeriesType.SplineArea">
                    <e-series-border width="2"></e-series-border>
                    <e-series-marker visible="true" height="6" width="6" isFilled="true" shape="@Syncfusion.EJ2.Charts.ChartShape.Circle"></e-series-marker>
                </e-series>
                <e-series dataSource="@Model.ChartPoints" name="France" xName="Period" opacity=0.5 width=2 yName="FR_InflationRate" type="@Syncfusion.EJ2.Charts.ChartSeriesType.SplineArea">
                    <e-series-border width="2"></e-series-border>
                    <e-series-marker visible="true" height="7" width="7" isFilled="true" shape="@Syncfusion.EJ2.Charts.ChartShape.Diamond"></e-series-marker>
                </e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
