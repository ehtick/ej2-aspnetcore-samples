@page
@model EJ2CoreSampleBrowser.Pages.Chart.SmartLabelModel
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-accumulationchart id="container" title="Summer Olympics 2024 - Gold Medals" subTitle="Source: wikipedia.org" load="load" enableBorderOnMouseMove="false" enableSmartLabels="true">
            <e-accumulation-series-collection>
                <e-accumulation-series dataSource="@Model.ChartPoints" xName="Country" yName="Medal" startAngle="60">
                    <e-accumulationseries-datalabel visible="true" name="DataLabelMappingName" position="@Syncfusion.EJ2.Charts.AccumulationLabelPosition.Outside">
                        <e-connectorstyle type="@Syncfusion.EJ2.Charts.ConnectorType.Curve" length="20px"></e-connectorstyle>
                        <e-font fontWeight="600"></e-font>
                    </e-accumulationseries-datalabel>
                </e-accumulation-series>
            </e-accumulation-series-collection>
            <e-accumulationchart-legendsettings visible="false"></e-accumulationchart-legendsettings>
            <e-accumulationchart-tooltipsettings enableHighlight="true" enable="true" format="<b>${point.x}</b><br> Gold Medals: <b>${point.y}</b>" header=""></e-accumulationchart-tooltipsettings>
        </ejs-accumulationchart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadAccumulationChartTheme(args);
            args.accumulation.series[0].radius = ej.base.Browser.isDevice ? "40%" : "65%";
            args.accumulation.series[0].dataLabel.textWrap = ej.base.Browser.isDevice ? "Wrap" : "Normal";
            args.accumulation.series[0].dataLabel.font.size = ej.base.Browser.isDevice ? "7px" : "12px";
            args.accumulation.series[0].dataLabel.connectorStyle.length = ej.base.Browser.isDevice ? '2px' : '20px';
        }
    </script>
}

@*custom code start*@
@section Meta{
                    <meta name="description" content="This example demonstrates the Smart Labels in ASP.NET Core Chart control. Explore here for more details."/>
                }
@*custom code end*@
@section ActionDescription{

    <p>
        This sample shows the gold medal count scored by each country at the summer olympics 2024 games using smart labels on the chart.
    </p>
}
