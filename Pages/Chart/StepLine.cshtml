@page
@model EJ2CoreSampleBrowser.Pages.Chart.StepLineModel
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-chart id="lineContainer" load="load" title="Worldwide Best-Selling Albums by Year" subTitle="Source: wikipedia.org" tooltipRender="tooltipRender">
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Double" minimum="2006" maximum="2025" interval=3 edgelabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                <e-majorgridlines width="0"></e-majorgridlines>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis interval="4" labelFormat="{value}" title="Sales in million" minimum=0 maximum=20>
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-series-collection>
                <e-series dataSource="@Model.StepLineData" xName="X" width="3" opacity="1" yName="Y" type="@Syncfusion.EJ2.Charts.ChartSeriesType.StepLine">
                    <e-series-marker visible="false">
                        <e-series-datalabel visible=true>
                            <e-font fontWeight="600"></e-font>
                        </e-series-datalabel>
                    </e-series-marker>
                </e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" showNearestTooltip="true" enableHighlight="true" header="<b>${point.x}</b>" enableMarker=false></e-chart-tooltipsettings>
        </ejs-chart>
    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }

        var tooltipRender = function (args) {
            var data = args.series.dataSource[args.point.index];
            args.text = `Sales: <b>${data.Y}M</b><br/>Album: <b>${data.Album}</b><br/>Artist: <b>${data.Artist}</b>`;
        }
    </script>
}
