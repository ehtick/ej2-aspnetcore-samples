@page
@model EJ2CoreSampleBrowser.Pages.Chart.RangeColumnModel
@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">

        <ejs-chart id="lineContainer" load="load" title="Contiguous U.S. Average Temperature in 2024" subTitle="Source: ncei.noaa.gov">
            <e-chart-chartarea>
                <e-chartarea-border width="0"></e-chartarea-border>
            </e-chart-chartarea>
            <e-chart-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category">
                <e-majorgridlines width="0"></e-majorgridlines>
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryxaxis>
            <e-chart-primaryyaxis minimum="0" maximum="100" interval=20 labelFormat="{value}˚F" title="Monthly Temperature Variation (°F)" edgeLabelPlacement="@Syncfusion.EJ2.Charts.EdgeLabelPlacement.Shift">
                <e-majorticklines width="0"></e-majorticklines>
                <e-linestyle width="0"></e-linestyle>
            </e-chart-primaryyaxis>
            <e-series-collection>
                <e-series dataSource="@Model.ChartPoints" xName="Month" high="Max" low="Min" columnSpacing="0.4" tooltipMappingName="TooltipText" type="@Syncfusion.EJ2.Charts.ChartSeriesType.RangeColumn">
                    <e-series-marker>
                        <e-series-datalabel visible="true" position="@Syncfusion.EJ2.Charts.LabelPosition.Outer"></e-series-datalabel>
                    </e-series-marker>
                    <e-series-cornerradius topRight=4 topLeft=4 bottomRight=4 bottomLeft=4></e-series-cornerradius>
                </e-series>
            </e-series-collection>
            <e-chart-tooltipsettings enable="true" header="<b>${point.tooltip}</b>" format="Temperature : <b>${point.low} - ${point.high}</b>"></e-chart-tooltipsettings>
            <e-chart-legendsettings visible="false" enableHighlight="true"></e-chart-legendsettings>
        </ejs-chart>

    </div>
    <script src="~/scripts/chart/theme-color.js"></script>
    <script>
        function load(args) {
            loadChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
    </script>
}
