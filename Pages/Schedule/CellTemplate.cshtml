@page

@using Syncfusion.EJ2

@section ControlsSection{
    @{ string template = "${if(type === 'monthCells')}<div class='templatewrap'>${getCellContent(data.date)}</div>${/if}"; }
    <div class="control-section">
        <ejs-schedule id="schedule" width="100%" height="650px" selectedDate="new DateTime(DateTime.Today.Year, 12, 15)" cellTemplate="@template">
            <e-schedule-views>
                <e-schedule-view option="Month"></e-schedule-view>
            </e-schedule-views>
        </ejs-schedule>
    </div>

    <style>
        .e-schedule .e-month-view .e-work-cells {
            position: relative;
        }

        .e-schedule .templatewrap {
            text-align: center;
            position: absolute;
            width: 100%;
        }

            .e-schedule .templatewrap img {
                width: 25px;
                height: 25px;
            }

        .e-schedule .caption {
            overflow: hidden;
            text-overflow: ellipsis;
            vertical-align: middle;
        }
    </style>
    <script type="text/javascript">
        window.getCellContent = function (date) {
            if (date.getMonth() === 10 && date.getDate() === 23) {
                return '<img src="@Url.Content("~/css/schedule/images/thanksgiving-day.svg")" alt="thanks giving pic"/><div class="caption">Thanksgiving day</div>';
            }
            else if (date.getMonth() === 11 && date.getDate() === 9) {
                return '<img src="@Url.Content("~/css/schedule/images/get-together.svg")" alt="Balloon Picture"/><div class="caption">Party time</div>';
            }
            else if (date.getMonth() === 11 && date.getDate() === 13) {
                return '<img src="@Url.Content("~/css/schedule/images/get-together.svg")" alt="Balloon Picture"/><div class="caption">Party time</div>';
            }
            else if (date.getMonth() === 11 && date.getDate() === 22) {
                return '<img src="@Url.Content("~/css/schedule/images/birthday.svg")" alt="Birthday Cake picture"/><div class="caption">Happy birthday</div>';
            }
            else if (date.getMonth() === 11 && date.getDate() === 24) {
                return '<img src="@Url.Content("~/css/schedule/images/christmas-eve.svg")" alt="Christmas tree picture"/><div class="caption">Christmas Eve</div>';
            }
            else if (date.getMonth() === 11 && date.getDate() === 25) {
                return '<img src="@Url.Content("~/css/schedule/images/christmas.svg")" alt="Christmas Decoration picture"/><div class="caption">Christmas Day</div>';
            }
            else if (date.getMonth() === 0 && date.getDate() === 1) {
                return '<img src="@Url.Content("~/css/schedule/images/newyear.svg")" alt="New Year celebration"/><div class="caption">New Year"s Day</div>';
            }
            else if (date.getMonth() === 0 && date.getDate() === 14) {
                return '<img src="@Url.Content("~/css/schedule/images/get-together.svg")" alt="pic"/><div class="caption">Get together</div>';
            }
            return '';
        }
    </script>
}

@*custom code start*@
