@page
@model EJ2CoreSampleBrowser.Pages.DropDownList.DisabledItems

@using Syncfusion.EJ2

@section ControlsSection {
    <div class="col-lg-12 control-section">
        <div id='statusList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4>Status</h4>
                <ejs-dropdownlist id="status" placeholder="Select Status" dataSource="@Model.status" allowFiltering=true >
                    <e-dropdownlist-fields value="ID"  text="Text" disabled="State"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
        <div id='vegetableList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4> Vegetable </h4>
                <ejs-dropdownlist id="vegetable" dataSource="@Model.veg" placeholder="Select Vegetable">
                    <e-dropdownlist-fields value="ID"  text="Vegetable" groupby="Category" disabled="Status"></e-dropdownlist-fields>
                </ejs-dropdownlist>
            </div>
        </div>
    </div>
    @*custom code start*@
    <style>
        .content {
            margin: 0 auto;
            width: 250px;
        }
    </style>
    @*custom code end*@
}
@section Meta{
    <meta name="description" content="This example demonstrates the Disabled Items in ASP.NET Core Dropdown List control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>This example showcases the disabled items of DropDownList. When you click on the DropDownList the popup will open, and you will notice that the disabled items are greyed out and cannot be selected.</p>
    </div>
}
@section Description{
    <div id="description">
        <p>The DropDownList provides options for individual items to be in either an enabled or disabled state for specific scenarios. Once an item is disabled, it cannot be selected as a value for the component. To configure the disabled item columns, use the <code>fields.disabled</code> property.</p>
    </div>
}
@section Title{
    <title>ASP.NET Core Dropdown List Disabled Items Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Disabled Items in ASP.NET Core Dropdown List Control</h1>
}