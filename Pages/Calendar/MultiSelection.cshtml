@page

@using Syncfusion.EJ2
@{
    var month = DateTime.Now.Month;
    var year = DateTime.Now.Year;
    var multiValue = new DateTime[] { new DateTime(year, month, 10), new DateTime(year, month, 15), new DateTime(year, month, 25) };
}
@section ControlsSection {
    <div class="col-lg-12">
        <div class="col-lg-7 control-section sb-property-border">
            <div class="calender-section">
                <div id="calender-control" class="col-lg-6 col-sm-8 col-md-8 multiselectWrapper">
                    <ejs-calendar id="calendar" isMultiSelection="true" values="@multiValue" created="changeValue" change="changeValue"></ejs-calendar>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <label style="padding-top:22px">Selected values</label>
            <div class="content-value">
                <div id="multiselect"></div>
            </div>
        </div>
    </div>
}
<script>
    function changeValue() {
        if (this.isMultiSelection) {
            var globalize = new ej.base.Internationalization(this.locale);
            var element = document.getElementById('multiselect')
            element.innerHTML = '';
            for (var index = 0; index < this.values.length; index++) {
                var selectedValue = globalize.formatDate(this.values[index]);
                element.insertBefore(document.createTextNode(selectedValue), element.childNodes[0]);
                element.insertBefore(document.createElement('br'), element.childNodes[0]);
            }
        }
    }
</script>

@section ActionDescription{
    <div id="action-description">
        <p>
            The following sample demonstrates the multiple date selection functionalities of the Calendar. Click/Touch the desired date from the Calendar and the selected date will be added to the values property of the calendar.
        </p>
    </div>


}

@section Description{
    <div id="description">
        <p>
            Multi selection sample demonstrates, how to enable and select the multiple date in a calendar by using the
            <code>isMultiSelection</code> and
            <code>values</code> properties. Here, 10, 15 and 25 date's are selected.
        </p>
        <p>
            More information on the calendar multi selection can be found in this
            <a href="https://ej2.syncfusion.com/aspnetcore/documentation/calendar/multi-select" target="_blank" aria-label="Navigate to the documentation for Multi Selection in ASP.NET Core Calendar control">
                documentation section
            </a>.
        </p>
    </div>


}

@section Meta{
    <meta name="description" content="This example demonstrates the Multiple Selection in ASP.NET Core Calendar control. Explore here for more details." />
}

