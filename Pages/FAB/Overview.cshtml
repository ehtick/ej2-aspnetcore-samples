@page
@model EJ2CoreSampleBrowser.Pages.FAB.OverviewModel
@using Syncfusion.EJ2

@section ControlsSection{
<div class="control-section">
    <div id="target" class="fab-grid-container custom-index">
        <ejs-grid id="Grid" dataSource="@Model.Order">
            <e-grid-editSettings allowAdding="true" mode="Dialog"></e-grid-editSettings>
            <e-grid-columns>
                <e-grid-column field="OrderID" headerText="Order ID"></e-grid-column>
                <e-grid-column field="CustomerID" headerText="Customer Name"></e-grid-column>
                <e-grid-column field="Freight" headerText="Freight" format="C2"></e-grid-column>
                <e-grid-column field="ShipCountry" headerText="Ship Country"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
        <ejs-fab id="fab" target="#target" position="BottomRight" iconCss="e-icons e-plus" title="Add" onclick="add()"></ejs-fab>
    </div>
</div>
}
<style>
    .fab-grid-container {
        position: relative;
    }

    .custom-index {
        z-index: 500 !important;
    }
</style>
<script>
    function add(){
        var grid=document.getElementById("Grid").ej2_instances[0];
        grid.addRecord();
    }
</script>
@section Meta{
<meta name="description" content="This example demonstrates the Overview in ASP.NET Core FAB control. Explore here for more details." />
}

@section ActionDescription{
<div id="action-description">
    <p>This sample demonstrates the usage of the Floating Action Button (FAB) controller to add a new record to a DataGrid.</p>
</div>
}
@section Description{
    <p>
        The FAB is a button that appears in front of all screen contents and performs the primary action. In this example, FAB is positioned at the bottom left of its target DataGrid to perform the add new record action.
    </p>
}
@section Title{
<title>ASP.NET Core FAB Overview Example - Syncfusion Demos </title>
}
@section Header{
<h1 class='sb-sample-text'>Overview in ASP.NET Core FAB Control</h1>
}
