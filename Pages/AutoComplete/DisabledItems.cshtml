@page
@model EJ2CoreSampleBrowser.Pages.AutoComplete.DisabledItems
@using EJ2CoreSampleBrowser.Models

@using Syncfusion.EJ2
@{
    var vegetabledata = new VegetableData().VegetableDataList();
}
@section ControlsSection {
    <div class="col-lg-12 control-section">
        <div id='statusList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4>Status</h4>
                <ejs-autocomplete id="status" placeholder="Select Status" dataSource="@Model.status">
                    <e-autocomplete-fields value="Status" disabled="State"></e-autocomplete-fields>
                </ejs-autocomplete>
            </div>
        </div>
        <div id='vegetableList' class='col-lg-6' style='padding-top:15px'>
            <div class='content'>
                <h4> Vegetable </h4>
                <ejs-autocomplete id="vegetable" dataSource="@vegetabledata" placeholder="Select Vegetable">
                    <e-autocomplete-fields value="Vegetable" groupby="Category" disabled="Status"></e-autocomplete-fields>
                </ejs-autocomplete>
            </div>
        </div>
    </div>
    @*custom code start*@
    <style>
        .content {
            margin: 0 auto;
            width: 250px;
        }
    </style>
    @*custom code end*@
}
@section Meta{
    <meta name="description" content="This example demonstrates the Disabled Items in ASP.NET Core AutoComplete control. Explore here for more details." />
}
@section ActionDescription{
    <div id="action-description">
        <p>This example showcases the disabled items of AutoComplete. When you type on the AutoComplete the popup will open, and you will notice that the disabled items are greyed out and cannot be selected.</p>
    </div>
}
@section Description{
    <div id="description">
        <p>The AutoComplete provides options for individual items to be in either an enabled or disabled state for specific scenarios. Once an item is disabled, it cannot be selected as a value for the component. To configure the disabled item columns, use the <code>fields.disabled</code> property.</p>
    </div>
}
@section Title{
    <title>ASP.NET Core AutoComplete Disabled Items Example - Syncfusion Demos </title>
}
@section Header{
    <h1 class='sb-sample-text'>Example of Disabled Items in ASP.NET Core AutoComplete Control</h1>
}