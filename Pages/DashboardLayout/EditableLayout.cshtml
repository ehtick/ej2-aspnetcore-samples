        display: none;
    }

    .e-btn,
    .e-css.e-btn {
        display: block;
    }

    .dialog-text {
        height: 35px;
        border: 1px solid #80808029;
        vertical-align: middle;
        line-height: 35px;
        border-radius: 4px;
        padding-left: 12px;
        margin-bottom: 5%;
        cursor: pointer;
    }

    @@media (max-width: 650px) {
        #togglebtn {
            width: 90px !important;
        }
    }

    .add-widget-button {
        padding: 10px;
        text-align: center;
        margin-bottom: 10px;
        cursor: pointer;
        font-size: 15px;
    }

    .e-dashboardlayout.e-control .e-panel:hover span {
        display: block;
    }

