                    <title>ASP.NET Core Rich Text Editor File Browser Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of File Browser in ASP.NET Core Rich Text Editor Control</h1>
                }