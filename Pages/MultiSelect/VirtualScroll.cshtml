        width: 80%;
        margin: 0 auto;
        width: 250px;
        padding-top: 15px
    } 

    .e-list-icon {
        font-family: 'e-icons' !important;
        color: rgba(0, 0, 0, .57);
    }
    .header {
        font-weight: 600;
        color: rgba(0, 0, 0, .54);
        height: 48px;
        padding: 15px 0 0 16px;
        font-size: 16px;
        background-color: #f5f5f5;
    }

