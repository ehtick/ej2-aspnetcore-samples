@page
@model EJ2CoreSampleBrowser.Pages.MultiSelect.ObjectValueBinding

@{
    var recordList = new MultiSelectRecord().RecordModelList();
}

@using Syncfusion.EJ2
@section ControlsSection{
<div class="col-lg-8 control-section">
    <div class="control-wrapper">
        <div id="default" style='padding-top:75px;'>
            <ejs-multiselect id="object" dataSource="@recordList" allowObjectBinding="true" placeholder="e.g. Item 1" popupHeight="220px" mode="Default" change="valueChange">
                <e-multiselect-fields text="Text" value="ID"></e-multiselect-fields>
            </ejs-multiselect>
        </div>
    </div>
</div>
<div class="col-lg-4 property-section">
    <textarea id="value" title="Properties" style="width: 100%; margin-top:90px; height: 60px; background-color: inherit;" readonly>Selected value : </textarea>
</div>

@*custom code start*@
<style>
    .control-wrapper {
        margin: 0 auto;
        width: 250px;
    }

    .property-section .right-side {
        padding-left: 10px;
    }

    .property-section .left-side {
        padding: 5px;
        width: 25%
    }
</style>
@*custom code end*@
<script type="text/javascript">
    function valueChange() {
        var listObj = document.getElementById('object').ej2_instances[0];
        var value = document.getElementById('value');
        value.innerHTML = "Selected value : " + JSON.stringify(listObj.value);
    }
</script>
}
@section Scripts{
<script type="text/javascript">
    valueChange();

</script>

}
@section Meta{
<meta name="description" content="This example demonstrates the Allow Object Binding Functionalities in ASP.NET Core MultiSelect Dropdown control. Explore here for more details."/>
}
@section ActionDescription{
<div id="action-description">
    <p>This sample demonstrates the object value binding functionalities of the MultiSelect. Type a character in the
        MultiSelect element or click on this element to choose one or more items from the suggestion list. The
        corresponding object value of the selected
        item is then assigned to the value property.In the property panel, the <code>value</code> property of the
        selected item's will be displayed.</p>
</div>
}
@section Description{
<div id="description">
    <p>The <code>MultiSelect</code> component contains a list of predefined values, from that the user can choose a
        multiple
        values. </p>
    <p>In this sample, the selected items are shown with default UI modes in MultiSelect elements. Once an item is
        selected, its associated object value is automatically
        assigned to the <code>value</code> property. This behavior is enabled by the <code>allowObjectBinding</code>
        property.</p>
</div>
}
@section Title{
<title>ASP.NET Core MultiSelect Dropdown Allow Object Binding Functionalities Example - Syncfusion Demos </title>
}
@section Header{
<h1 class='sb-sample-text'>Example of Allow Object Binding Functionalities in ASP.NET Core MultiSelect Dropdown Control</h1>
}