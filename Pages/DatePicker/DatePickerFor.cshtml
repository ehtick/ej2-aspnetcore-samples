@page
@model EJ2CoreSampleBrowser.Pages.DatePicker.DatePickerForModel

@using Syncfusion.EJ2

@section ControlsSection{
    <div class=" control-section">
        <div id="wrapper" class="datepicker-section">
            <div id="datepicker-control">
                <form method="post">
                    <ejs-datepicker id="datepickerFor" name="value" ejs-for="@Model.valueObject.value"></ejs-datepicker>
                    <div id="errorMessage">
                        <span asp-validation-for="valueObject.value"></span>
                    </div>
                    <div id="submitbutton">
                        <ejs-button id="submitButton" content="Submit"></ejs-button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
@*custom code start*@

<style>
    #date_label {
        display: block;
        width: 248px;
        color: rgba(0, 0, 0, 0.58);
        margin-left: 5px;
    }

    #datepicker-control {
        max-width: 300px;
        margin: 0 auto;
    }

    #wrapper {
        max-width: 246px;
        margin: 30px auto;
        padding-top: 20px;
    }

    #submitbutton {
        margin: 10px auto;
        text-align: center;
    }

    #errorMessage {
        color: red;
        text-align: center
    }
</style>
@*custom code end*@



@section ActionDescription{
    <div id="action-description">
        <p>
            Click/Touch the submit button to post the selected value in the DatePicker. When posting the null value, validation error message will be shown below the DatePicker.
        </p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            Click the submit button to post the selected value in the DatePicker. When posting the null value, validation error message will be shown below the DatePicker.
        </p>
