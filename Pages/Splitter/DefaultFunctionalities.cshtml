                    <title>ASP.NET Core Splitter Default Functionalities Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Default Functionalities in ASP.NET Core Splitter Control</h1>
                }
