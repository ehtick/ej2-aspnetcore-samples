@page
@model EJ2CoreSampleBrowser.Pages.ThreeDimensionsChart.CylinderModel

@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section" align="center">
        <ejs-chart3d id="columnContainer" load="load" axisLabelRender="axisLabelRender" pointRender="labelRender" title="Passenger Car Production in Selected Countries - 2021" wallColor="transparent" rotation="7" tilt="10" depth="100" height="400">
            <e-chart3d-tooltipsettings enable="true" header="${point.x}" format="Car Production : <b>${point.y}M">
            </e-chart3d-tooltipsettings>
            <e-chart3d-legendsettings visible="false" enableHighlight="true">
            </e-chart3d-legendsettings>
            <e-chart3d-primaryxaxis valueType="@Syncfusion.EJ2.Charts.ValueType.Category" interval="1" labelPlacement="@Syncfusion.EJ2.Charts.LabelPlacement.BetweenTicks" labelRotation="-45">
            </e-chart3d-primaryxaxis>
            <e-chart3d-primaryyaxis maximum="4" interval="1">
            </e-chart3d-primaryyaxis>
            <e-chart3d-series-collection>
                <e-chart3d-series dataSource="@Model.ChartPoints" xName="X" yName="Y" columnWidth="0.9" type="@Syncfusion.EJ2.Charts.Chart3DSeriesType.Column" columnFacet="@Syncfusion.EJ2.Charts.ShapeType.Cylinder">
                </e-chart3d-series>
            </e-chart3d-series-collection>
        </ejs-chart3d>
    </div>
    <script src="~/scripts/three-dimensional-chart/theme-color.js"></script>
    <script>
        function load(args) {
            load3DChartTheme(args);
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";
        }
        function axisLabelRender(args) {
            if (args.axis.name === 'primaryYAxis') {
                args.text = args.text + 'M';
            }
        }
        function labelRender(args) {
            pointRender(args);
        }
    </script>
}
