                    <meta name="description" content="This example demonstrates the Earthquake indication in ASP.NET Core Maps control. Explore here for more details."/>
                }
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the earth quack occurred in Sumatra, Indonesia in the year 2009.
       </p>
    </div>
}
