                    <e-tab-tabitem header="headerTextOne" content="@content1"></e-tab-tabitem>
                    <e-tab-tabitem header="headerTextTwo" content="@content2" disabled="true"></e-tab-tabitem>
                    <e-tab-tabitem header="headerTextThree" content="@content3" disabled="true"></e-tab-tabitem>
                    <e-tab-tabitem header="headerTextFour" content="@content4" disabled="true"></e-tab-tabitem>
                </e-tab-tabitems>
            </ejs-tab>
            <div>
