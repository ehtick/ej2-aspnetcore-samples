@page

@using Syncfusion.EJ2;
@using Syncfusion.EJ2.Navigations;
@using EJ2CoreSampleBrowser.Controllers;
@model EJ2CoreSampleBrowser.Pages.Tab.WizardModel
@{
    var dlgTarget = "#ej2Tab";
    var content1 = "#booking";
    var content2 = "#selectTrain";
    var content3 = "#details";
    var content4 = "#confirm";

    

    

    var headerTextOne = new TabHeader { Text = "New Booking" };
    var headerTextTwo = new TabHeader { Text = "Train List" };
    var headerTextThree = new TabHeader { Text = "Add Passenger" };
    var headerTextFour = new TabHeader { Text = "Make Payment" };

    var min = DateTime.Now;
    var max = DateTime.Now.AddMonths(3);
	var value = DateTime.Now;

}

