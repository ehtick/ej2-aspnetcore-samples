@page
@using Syncfusion.EJ2
@section ControlsSection {
    <div class="control-section">
        <div class="row linear-parent" style="margin-left: 10%">
            <div style="margin-top: 0.5%">
                <div class="col-lg-12 col-sm-12 progressbar-label-tooltip">HTML5</div>
                <div id="lineardeterminate">
                    <ejs-progressbar id="lineardeterminate"
                                     type='Linear'
                                     height='60'
                                     minimum="0" maximum="100" 
                                     trackThickness="20" 
                                     progressThickness="20"
                                     value="75"
                                     load="progressLoad">
                        <e-progressbar-animation enable=true duration=2000 delay=0></e-progressbar-animation>
                        <e-progressbar-tooltipsettings enable="true"></e-progressbar-tooltipsettings>
                    </ejs-progressbar>
                </div>
            </div>
            <div style="margin-top: 0.5%">
                <div class="col-lg-12 col-sm-12 progressbar-label-tooltip">CSS3</div>
                <div id="linearindeterminate">
                    <ejs-progressbar id="linearindeterminate"
                                     type='Linear'
                                     height='60'
                                     minimum="0" maximum="100" 
                                     trackThickness="20" 
                                     progressThickness="20"
                                     value="65"
                                     load="progressLoad">
                        <e-progressbar-animation enable=true duration=2000 delay=0></e-progressbar-animation>
                        <e-progressbar-tooltipsettings enable="true"></e-progressbar-tooltipsettings>
                    </ejs-progressbar>
                </div>
            </div>
            <div style="margin-top: 0.5%">
                <div class="col-lg-12 col-sm-12 progressbar-label-tooltip">Bootstrap</div>
                <div id="linearsegment">
                    <ejs-progressbar id="linearsegment"
                                     type='Linear'
                                     height='60'
                                     minimum="0" maximum="100" 
                                     trackThickness="20" 
                                     progressThickness="20"
                                     value="55"
                                     load="progressLoad">
                        <e-progressbar-animation enable=true duration=2000 delay=0></e-progressbar-animation>
                        <e-progressbar-tooltipsettings enable="true"></e-progressbar-tooltipsettings>
                    </ejs-progressbar>
                </div>
            </div>
            <div style="margin-top: 0.5%">
                <div class="col-lg-12 col-sm-12 progressbar-label-tooltip">JavaScript</div>
                <div id="linearbuffer">
                    <ejs-progressbar id="linearbuffer"
                                     type='Linear'
                                     height='60'
                                     minimum="0" maximum="100" 
                                     trackThickness="20" 
                                     progressThickness="20"
                                     value="75"
                                     load="progressLoad">
                        <e-progressbar-animation enable=true duration=2000 delay=0></e-progressbar-animation>
                        <e-progressbar-tooltipsettings enable="true"></e-progressbar-tooltipsettings>
                    </ejs-progressbar>
                </div>
            </div>
            <div style="margin-top: 0.5%">
                <div class="col-lg-12 col-sm-12 progressbar-label-tooltip">MySQL</div>
                <div id="linearactive">
                    <ejs-progressbar id="linearactive"
                                     type='Linear' 
                                     height='60'
                                     minimum="0" 
                                     maximum="100" 
                                     trackThickness="20" 
                                     progressThickness="20"
                                     value="75"
                                     load="progressLoad">
                        <e-progressbar-animation enable=true duration=2000 delay=0></e-progressbar-animation>
                        <e-progressbar-tooltipsettings enable="true"></e-progressbar-tooltipsettings>
                    </ejs-progressbar>
                </div>
            </div>
        </div>
    </div>
    <script src="~/scripts/Progressbar/theme-color.js"></script>
    <script>
        var div = document.getElementsByClassName('progressbar-label-tooltip');
        var progressLoad = function (args) {
            loadProgressBarTheme(args);
            if (args.progressBar.theme === 'HighContrast' || args.progressBar.theme === 'Bootstrap5Dark' || args.progressBar.theme === 'BootstrapDark' || args.progressBar.theme === 'FabricDark'
                || args.progressBar.theme === 'TailwindDark' || args.progressBar.theme === 'Tailwind3Dark' || args.progressBar.theme === 'MaterialDark' || args.progressBar.theme === 'FluentDark' || args.progressBar.theme === 'Material3Dark' || args.progressBar.theme === 'Fluent2HighContrast' || args.progressBar.theme === 'Fluent2Dark') {
                for (let i = 0; i < div.length; i++) {
                    div[i].setAttribute('style', 'color:white');
                }
            }
        };       
    </script>
}
@section ActionDescription{
    <p>
        This sample illustrates a linear progress bar with a tooltip.
    </p>
}
@section Description{
    <p>
        In this example, you can see how to render and configure the linear progress bar with a tooltip. The <code>format</code> and <code>textStyle</code> properties in the tooltip settings can be used to format and customize the tooltip text.
    </p>

}
