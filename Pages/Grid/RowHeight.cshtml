@page
@model EJ2CoreSampleBrowser.Pages.Grid.RowHeightModel
@section ControlsSection{

    <link href="~/styles/Grid/gridfont.css" rel="stylesheet" />
    <div class="control-section">
        <ejs-grid id="Grid" dataSource="@Model.DataSource" allowSorting="true" height="400" rowHeight="20" toolbarClick="toolbarClick" toolbar="@Model.toolbar">
            <e-grid-filterSettings type="Excel"></e-grid-filterSettings>
            <e-grid-columns>
                <e-grid-column field="OrderID" headerText="Order ID" textAlign="Right" width="120" isPrimaryKey="true" validationRules="@(new { required=true, number=true})"></e-grid-column>
                <e-grid-column field="CustomerID" headerText="Customer Name" width="150" validationRules="@(new { required=true, minLength=5})"></e-grid-column>
                <e-grid-column field="OrderDate" headerText=" Order Date" textAlign="Right" format="yMd" width="130" editType="datepickeredit"></e-grid-column>
                <e-grid-column field="Freight" headerText="Freight" textAlign="Right" format="C2" width="120" editType="numericedit" validationRules="@(new { required=true, min=0})"></e-grid-column>
                <e-grid-column field="ShippedDate" headerText="Shipped Date" textAlign="Right" format="yMd" width="140" editType="datepickeredit"></e-grid-column>
                <e-grid-column field="ShipCountry" headerText="Ship Country" width="150" editType="dropdownedit"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
    <style>

        @@font-face {
            font-family: 'e-grid-rowheight';
            src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
            font-weight: normal;
            font-style: normal;
        }

   .e-grid .e-small-icon::before {
        font-family: 'e-grid-rowheight';
        content: '\e707';
    }

   .e-grid .e-medium-icon::before {
        font-family: 'e-grid-rowheight';
        content: '\e701';
    }

    .e-grid .e-big-icon::before {
        font-family: 'e-grid-rowheight';
        content: '\e702';
    }
    </style>

    <script>
        function toolbarClick(args) {


            if (args.item.id === 'small') {
                this.rowHeight = 20;
            }
            if (args.item.id === 'medium') {
                this.rowHeight = 40;
            }
            if (args.item.id === 'big') {
                this.rowHeight = 60;
            }
        }
    </script>

}
@section ActionDescription{
    <div id="action-description">
        <p>
            This sample demonstrates the row height feature of the Grid. In this demo, the <b>rowHeight</b> for all the Grid rows can be
            changed as <b>20px</b>, <b>40px</b> and <b>60px</b> on ToolBar button click.
        </p>
    </div>
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Row Height in ASP.NET Core Data Grid control. Explore here for more details."/>
                }

@section Description{
    <div id="description">
        <p>
            The Grid has support to provide <code>rowHeight</code> property.
        </p>
    </div>
}
@section Title{
                    <title>ASP.NET Core Data Grid Row Height Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Row Height in ASP.NET Core Data Grid Control</h1>
                }