@page

@using Syncfusion.EJ2
@section ControlsSection{
<div class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="control-label">
            Numeric TextBox
        </div>
        <ejs-numerictextbox id="numeric" format="n3" decimals="3" validateDecimalOnType="true" value="10"></ejs-numerictextbox>
        <div class="control-label">
            Percentage TextBox
        </div>
        <ejs-numerictextbox id="percent" format="p3" decimals="3" validateDecimalOnType="true" value="0.5" min="0" max="1" step="0.01"></ejs-numerictextbox>
        <div class="control-label">
            Currency TextBox
        </div>
        <ejs-numerictextbox id="currency" format="c3" decimals="3" validateDecimalOnType="true" value="100"></ejs-numerictextbox>
    </div>
</div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Restrict Decimals in ASP.NET Core Numeric Textbox control. Explore here for more details."/>
                }

@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the decimal functionalities of the Numeric TextBox. Type a value in the input element to change dynamically, and it allows maximum of 3 decimal digits.</p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            The NumericTextBox provides an option to restrict the number of decimal values, by using the decimals property. To restrict the number of decimal values on typing, use the decimals and validateDecimalOnType properties.
        </p>
        <p>
            More information about NumericTextBox can be found in this
            <a target="_blank"
               href="https://ej2.syncfusion.com/aspnetcore/documentation/numerictextbox/getting-started/#precision-of-numbers" aria-label="Navigate to the documentation for Precision of numbers in ASP.NET Core NumericTextBox control">
        documentation section</a>.
        </p>
    </div>
}
