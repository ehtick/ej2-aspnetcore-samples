@page
@model EJ2CoreSampleBrowser.Pages.Gantt.WorkWeekModel
@using EJ2CoreSampleBrowser.Models;
@using Syncfusion.EJ2.Gantt;

@section ControlsSection {

    <div class="col-lg-8 control-section">
        <div class="content-wrapper">
            <div id="container">
                <ejs-gantt id='WorkWeek' dataSource="@GanttData.ProjectNewData()" treeColumnIndex="1" height="650px"
                    rowHeight="46" taskbarHeight="25" highlightWeekends="true" workWeek="@Model.WorkWeek"
                    projectStartDate="03/26/2025" projectEndDate="07/20/2025">
                    <e-gantt-taskfields id="TaskId" name="TaskName" startDate="StartDate" endDate="EndDate"
                        duration="Duration" progress="Progress" dependency="Predecessor" parentID="ParentID">
                    </e-gantt-taskfields>
                    <e-gantt-columns>
                        <e-gantt-column field=" TaskId" visible="false" width="80"></e-gantt-column>
                        <e-gantt-column field="TaskName" width="250" clipMode="EllipsisWithTooltip"></e-gantt-column>
                        <e-gantt-column field="StartDate"></e-gantt-column>
                        <e-gantt-column field="Duration"></e-gantt-column>
                        <e-gantt-column field="Progress"></e-gantt-column>
                        <e-gantt-column field="Predecessor"></e-gantt-column>
                    </e-gantt-columns>
                    <e-gantt-splitterSettings columnIndex="1"></e-gantt-splitterSettings>
                    <e-gantt-labelSettings leftLabel="TaskName"></e-gantt-labelSettings>
                </ejs-gantt>
            </div>
        </div>
    </div>
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties" style="width: 103%">
            <colgroup>
                <col style="width:30%" />
                <col style="width:70%" />
            </colgroup>
            <tr>
                <td style="width:30%">
                    <div>Working Days</div>
                </td>
                <td style="width:70%">
                    <div style="padding-top: 0px">
                        <ejs-multiselect id="WorkingDays" dataSource="@WorkWeekModel.DropDownData.GetDayOfWeek()"
                            select="SelectedDay" removed="RemovedDay" value="@Model.WorkWeek" mode="CheckBox"
                            showDropDownIcon="true" popupHeight="350px">
                            <e-multiselect-fields value="Id" text="Day"></e-multiselect-fields>
                        </ejs-multiselect>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="width: 30%">
                    <div>Show Weekends</div>
                </td>
                <td style="width: 70%">
                    <div>
                        <ejs-checkbox id="showWeekendsCheck" change="showWeekendsChange" checked="true"></ejs-checkbox>
                    </div>
                </td>
            </tr>
            <tr>
                <td style="width: 30%">
                    <div>Highlight Weekends</div>
                </td>
                <td style="width: 70%">
                    <div>
                        <ejs-checkbox id="highlightWeekendsCheck" change="highlightWeekendsChange"
                            checked="true"></ejs-checkbox>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <style>
        .property-panel-table div {
            padding-top: 0px;
        }
    </style>
    <script>
        function showWeekendsChange() {
            var checkBox = document.getElementById("showWeekendsCheck").ej2_instances[0];
            var gantt = document.getElementById("WorkWeek").ej2_instances[0];
            if (checkBox.checked) {
                gantt.timelineSettings.showWeekend = true;
            } else {
                gantt.timelineSettings.showWeekend = false;
            }
        }
        function highlightWeekendsChange() {
            var checkBox = document.getElementById("highlightWeekendsCheck").ej2_instances[0];
            var gantt = document.getElementById("WorkWeek").ej2_instances[0];
            if (checkBox.checked) {
                gantt.highlightWeekends = true;
            } else {
                gantt.highlightWeekends = false;
            }
        }
        function SelectedDay(args) {
            var gantt = document.getElementById("WorkWeek").ej2_instances[0];
            var workingDays = ej.base.extend([], this.value, [], true);
            workingDays.push(args.itemData.Day);
            gantt.workWeek = workingDays;
        }
        function RemovedDay(args) {
            var gantt = document.getElementById("WorkWeek").ej2_instances[0];
            var index = gantt.workWeek.indexOf(args.itemData.Day);
            if (index !== -1) {
                gantt.workWeek = this.value;
            }
        }
    </script>

}

@section ActionDescription {
    <div id="action-description">
        <p>This sample demonstrates how to adjust the working days within a week and manage the visibility of non-working
            days in the timeline, enabling customized project scheduling.</p>
    </div>
}
@section Description {

    <div id="description">
        <p>
            In this example, you can customize which days of the week are considered working days using the <a
                target="_blank"
                href="https://help.syncfusion.com/cr/aspnetcore-js2/syncfusion.ej2.gantt.gantt.html#Syncfusion_EJ2_Gantt_Gantt_WorkWeek">workWeek</a>
            property.
            Simply select your preferred working days from the dropdown list in the property panel, and they will be applied
            to the Gantt Chart. Weekends can be highlighted using the <a target="_blank"
                href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Gantt.Gantt.html#Syncfusion_EJ2_Gantt_Gantt_HighlightWeekends">highlightweekends</a>
            property for easy identification.
        </p>
        <p>
            Non-working days are visible by default in the Gantt Chart timeline, their visibility can be customized using
            the <a target="_blank"
                href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.Gantt.GanttTimelineSettings.html#Syncfusion_EJ2_Gantt_GanttTimelineSettings_ShowWeekend">timelineSettings.showWeekend</a>
            property. Setting this to false will hide non-working days from the timeline.
        </p>
        <br>
    <p>More information on the Essential<sup>®</sup> Gantt Chart can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetcore/documentation/gantt/task-scheduling#weekendnon-working-days">documentation section</a>.</p>
    </div>
}
@section Meta {
    <meta name="description"
        content="This example demonstrates the Workweek in ASP.NET Core Gantt control. Explore here for more details." />
}
@section Title {
    <title>ASP.NET Core Gantt Workweek Example - Syncfusion Demos </title>
}
@section Header {
    <h1 class='sb-sample-text'>Example of Workweek in ASP.NET Core Gantt Control</h1>
}
