            </div>
            <div class="content">
                <span class="firstcontent" style="font-size: 17px;">STAND</span>
                <span class="firstcontent" style="font-size: 17px;color: #00d8fe">58%</span><br />
                <span class="secondcontent" style="color: #00d8fe; font-size: 19px">7/12 HR</span>
            </div>
        </div>
    </div>
}
<script>
    window.gaugeLoad = function (args) {
        @* custom code start *@
        var theme = themeName ? themeName : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-high/i, 'High').replace(/5.3/i, '5');
        @* custom code end *@
        if (selectedTheme.indexOf('highcontrast') > -1 || selectedTheme.indexOf('dark') > -1) {
            if (args.gauge.element.id === 'gauge2') {
                args.gauge.axes[0].annotations[0].content = '<div class="annotation7"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image4.svg" /></div>';
            }
            if (args.gauge.element.id === 'gauge3') {
                args.gauge.axes[0].annotations[0].content = '<div class="annotation8"><img style="width:15px;height:15px;" src="../styles/images/circulargauge/image5.svg" /></div>';
            }
            if (args.gauge.element.id === 'gauge4') {
                args.gauge.axes[0].annotations[0].content = '<div class="annotation9"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image6.svg" /></div>';
            }
        }
    };
</script>
