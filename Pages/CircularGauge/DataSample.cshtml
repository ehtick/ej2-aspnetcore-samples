    <div id='templateWrap'>
        <img src="../styles/images/circulargauge/negative.png" alt="Negative value for UK" />
        <div class='des'>
            <div style="font-size:20px;font-family:inherit">-${pointers[0].value}%</div>
        </div>
    </div>
</script>
