                    <meta name="description" content="This example demonstrates the Animation in ASP.NET Core Predefined Dialogs control. Explore here for more details."/>
                }

@*custom code end*@
@section Title{
                    <title>ASP.NET Core Predefined Dialogs Animation Example - Syncfusion Demos </title>
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Animation in ASP.NET Core Predefined Dialogs Control</h1>
                }