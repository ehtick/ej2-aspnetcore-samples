@page

@using EJ2CoreSampleBrowser.Models;
@using Syncfusion.EJ2.Buttons;

@{
    var textStyle = new { size = "15px", fontWeight = "500", fontStyle = "Normal", fontFamily = "inherit" };
    var xAxisLabel = new string[]
    {
        "2007", "2008", "2009", "2010", "2011",
        "2012", "2013", "2014", "2015", "2016", "2017"
    };
    var yAxisLabel = new string[]
    {
        "Jan", "Feb", "Mar", "Apr", "May",
        "Jun", "July", "Aug", "Sept", "Oct", "Nov", "Dec"
    };
    var labelTextStyle = new { fontFamily = "inherit" };
    var cellBorder = new
    {
        width = "0",
    };
    var opposedAxes = new HeatMapData().GetOpposedData();
}

@section ControlsSection{
    
    <div class="col-lg-9 control-section">
        <div id="container">
            <ejs-heatmap id='container' load="window.onHeatmapLoad" dataSource="@opposedAxes">
                <e-heatmap-titlesettings text="Monthly Flight Traffic at JFK Airport" textStyle="textStyle">
                </e-heatmap-titlesettings>
                <e-heatmap-xaxis labels="xAxisLabel" textStyle="labelTextStyle" labelRotation="45" labelIntersectAction="None" opposedPosition="true">
                </e-heatmap-xaxis>
                <e-heatmap-yaxis labels="yAxisLabel" textStyle="labelTextStyle" opposedPosition="true">
                </e-heatmap-yaxis>
                <e-heatmap-cellsettings border="cellBorder" showLabel="false" format="{value} flights"></e-heatmap-cellsettings>
                <e-heatmap-legendsettings visible="false"></e-heatmap-legendsettings>
                <e-heatmap-tooltipsettings>
                    <e-tooltipsettings-textstyle fontFamily="inherit"></e-tooltipsettings-textstyle>
                </e-heatmap-tooltipsettings>
            </ejs-heatmap>
        </div>
    </div>
    <div class="col-lg-3 property-section">
        <table id="property" title="Properties" style="width: 100%;margin-left: -20px;">
            <tbody>
                <tr style="height: 50px">
                    <td style="width: 40%;">
                        <div>
                            <ejs-checkbox id="XOpposedPosition" checked="true" label="Change X-Axis Position" change="window.valueXChange"></ejs-checkbox>
                        </div>
                    </td>
                </tr>
                <tr style="height: 50px">
                    <td style="width: 40%;">
                        <div>
                            <ejs-checkbox id="YOpposedPosition" checked="true" label="Change Y-Axis Position" change="window.valueYChange"></ejs-checkbox>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script type="text/javascript">
        window.onHeatmapLoad = function (args) {
            window.heatmap = args.heatmap;
            var selectedTheme = themeName ? themeName : 'Material';
            args.heatmap.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast').replace(/-high/i, 'High').replace(/5.3/i, '5');
        }
        window.valueXChange = function (args) {
            window.heatmap.xAxis.opposedPosition = args.checked;
        }
        window.valueYChange = function (args) {
            window.heatmap.yAxis.opposedPosition = args.checked;
        }
    </script>
}

@section ActionDescription{
    <div id="action-description">
        <p>
            This sample illustrates the monthly flight arrivals at JFK international airport, New York. The data label is disabled in
            this sample, the tooltip displays the data point values. In property panel, the options are available to change the
            position of the axes by means of checkbox for each axis.
        </p>
    </div>
}
@section Description{

    <div id="description">
        <p>
            In this example, you can see how to change the display position of the axis. You can change the display position of axes by enabling the 
            <a href="https://help.syncfusion.com/cr/aspnetcore-js2/Syncfusion.EJ2.HeatMap.HeatMapAxis.html#Syncfusion_EJ2_HeatMap_HeatMapAxis_OpposedPosition" target="_blank" aria-label="opposedPosition">opposedPosition</a> property for each axis.
        </p>
        <p>The tooltip is enabled in this example. To see the tooltip in action, hover the mouse over an item or tap an item on touch-enabled devices.</p>
        <br>
    </div>
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Opposed Axis in ASP.NET Core HeatMap Chart control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET Core HeatMap Chart Opposed Axis Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Opposed Axis in ASP.NET Core HeatMap Chart Control</h1>
                }
