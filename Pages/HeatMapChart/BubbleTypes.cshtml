                    <title>ASP.NET Core HeatMap Chart Bubble Types Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Bubble Types in ASP.NET Core HeatMap Chart Control</h1>
                }


