@section PreScripts {
    <script>
        var dialogObj;
        var lessContent = 'On October 17, Microsoft will release its Fall Creators Update for the Windows 10 platform. Much like its previous counterpart, the Spring Creators Update, the release is set to deliver more features to Windows 10 for both developers and users, with particular emphasis this time around on app modernization, mixed reality, and game development and software updates. App modernization is the term Microsoft used in its press event to encompass the features that will affect most Windows 10 users and developers.';
        function dlgButtonClick() {
            if (document.querySelector('.e-footer-content .e-btn').textContent === 'More Details') {
                var fetchApi = new ej.base.Fetch(baseurl + 'css/Dialog/blog.html', 'GET');
                fetchApi.send().then();
                fetchApi.onSuccess = function (data) {
                    dialogObj.setProperties(
                        { content: data }
                    );
                };
                dialogObj.buttons = [{ click: dlgButtonClick, buttonModel: { content: 'Less Details', isPrimary: true } }];
                dialogObj.dataBind();
            }
            else {
                dialogObj.content = lessContent;
                dialogObj.buttons = [{ click: dlgButtonClick, buttonModel: { content: 'More Details', isPrimary: true } }];
                dialogObj.dataBind();
            }
        }
        function dialogCreated() {
            dialogObj = this;
        }
        function dialogClose() {
            document.getElementById('dialogBtn').style.display = 'block';
        }
        function dialogOpen() {
            document.getElementById('dialogBtn').style.display = 'none';
            /* custom code start */
            document.getElementById("ajax_dialog").ej2_instances[0].zIndex = 10000;
            /* custom code end */
        }
        document.getElementById('dialogBtn').onclick = function () {
            dialogObj.show();
        };
    </script>
}

