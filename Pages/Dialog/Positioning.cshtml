@page

@using Syncfusion.EJ2
@{
    var defaultanimation = new Syncfusion.EJ2.Popups.DialogAnimationSettings { Effect = Syncfusion.EJ2.Popups.DialogEffect.None };
}

@section ControlsSection {
    <div class="col-lg-12 control-section" id="target">
        <ejs-button id="dialogBtn" cssClass="dlgbtn" content="Open Dialog"></ejs-button>

        <ejs-dialog id="positioningDialog" animationSettings="defaultanimation" width="452px" target="#target" open="dialogOpen"
                    close="dialogClose" created="created" showCloseIcon="true" footerTemplate=@Html.Raw("<span id='posvalue' style='float:left;margin-left:8px;padding:10px;'> Position: { X: 'Center', Y: 'Center' }</span>") header="Choose a Dialog Position">
            <e-dialog-position X="center" Y="center"></e-dialog-position>
            <e-content-template>
                <table id="poschange">
                    <tr>
                        <td><ejs-radiobutton id="radio1" name="xy" label="Left Top" value="left top" change="onChangeHandler" ></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio2" name="xy" label="Center Top" value="center top" change="onChangeHandler"></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio3" name="xy" label="Right Top" value="right top" change="onChangeHandler"></ejs-radiobutton></td>
                    </tr>
                    <tr>
                        <td><ejs-radiobutton id="radio4" name="xy" label="Left Center" value="left center" change="onChangeHandler"></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio5" name="xy" label="Center Center" value="center center" change="onChangeHandler" checked="true"></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio6" name="xy" label="Right Center" value="right center" change="onChangeHandler"></ejs-radiobutton></td>
                    </tr>
                    <tr>
                        <td><ejs-radiobutton id="radio7" name="xy" label="Left Bottom" value="left bottom" change="onChangeHandler"></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio8" name="xy" label="Center Bottom" value="center bottom" change="onChangeHandler"></ejs-radiobutton></td>
                        <td><ejs-radiobutton id="radio9" name="xy" label="Right Bottom" value="right bottom" change="onChangeHandler"></ejs-radiobutton></td>
                    </tr>
                </table>
            </e-content-template>
        </ejs-dialog>
    </div>
}

@section PreScripts{
    <script>
        var dialogObj;
        function created() {
            dialogObj = this;
        }
        var onChangeHandler = function (args) {
            dialogObj.position.X = args.value.split(" ")[0];
            dialogObj.position.Y = args.value.split(" ")[1];
            var txt = args.event.target.parentElement.querySelector('.e-label').innerText.split(" ");
            document.getElementById("posvalue").innerHTML = 'Position: { X: "' + txt[0] + '", Y: "' + txt[1] + '" }';
        };
        document.getElementById('dialogBtn').onclick = function () {
            dialogObj.show();
        };
        function dialogClose() {
            document.getElementById('dialogBtn').style.display = 'block';
        }
        function dialogOpen() {
            document.getElementById('dialogBtn').style.display = 'none';
            /* custom code start */
            document.getElementById("positioningDialog").ej2_instances[0].zIndex = 10000;
            /* custom code end */
        }
    </script>
}

